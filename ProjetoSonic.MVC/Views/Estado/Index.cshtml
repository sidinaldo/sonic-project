@model IEnumerable<ProjetoSonic.MVC.ViewModels.EstadoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Estado</h2>

<p>
    @Html.ActionLink("Criar novo estado", "Create")
</p>
<table class="table table-bordered" width="30">
    <tr width="30">
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
           @Html.DisplayName("Sigla")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeEstado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EstadoId })
            @Html.ActionLink("Details", "Details", new { id=item.EstadoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EstadoId })
        </td>
    </tr>
}

</table>
